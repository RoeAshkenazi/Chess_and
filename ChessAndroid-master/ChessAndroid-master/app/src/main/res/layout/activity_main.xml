<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".MainActivity"
    android:layout_centerHorizontal="true"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/arvo"
        android:padding="30dp"
        android:text="Chess Game"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/horBar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="2dp">

        <ImageButton
            android:id="@+id/gameStart"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_offline_game"
            android:tooltipText="Offline game" />

        <ImageButton
            android:id="@+id/gameOnline"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_online_game"
            android:tooltipText="Online game" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horBar2"
        android:layout_marginTop="20dp"
        android:id="@id/horBar3"
        >
        <ImageButton
            android:id="@+id/listGame"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:tooltipText="Game history"
            android:src="@drawable/ic_history"
            />


        <ImageButton
            android:id="@+id/quit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:tooltipText="Quit"
            android:src="@drawable/ic_quit"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horBar3"
        android:layout_alignParentBottom="true"
        android:src="@drawable/istockphoto_492442889_612x612" />




</RelativeLayout>